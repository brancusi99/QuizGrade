<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Quiz - <%= quiz.title %></title>
    <link rel="stylesheet" href="/create_page.css">
</head>
<body>

    <div class="container">
        <h1>Edit Quiz</h1>
        
        <form id="quizForm" onsubmit="submitQuiz(event)">
            <div class="form-group">
                <label>Quiz Title</label>
                <input type="text" name="title" value="<%= quiz.title %>" required>
            </div>

            <div id="questions-container">
                <% questions.forEach(function(question, index) { %>
                    <div class="question-card">
                        <button type="button" class="remove-btn" onclick="removeQuestion(this)">Remove</button>
                        
                        <div class="form-group">
                            <label>Question Text</label>
                            <input type="text" name="questions[][text]" value="<%= question.text %>" required>
                        </div>

                        <div class="form-group">
                            <label>Question Type</label>
                            <select name="questions[][type]" onchange="changeType(this)">
                                <option value="multiple-choice" <%= question.type === 'multiple-choice' ? 'selected' : '' %>>Multiple Choice</option>
                                <option value="fill-blank" <%= question.type === 'fill-blank' ? 'selected' : '' %>>Fill in the Blank</option>
                            </select>
                        </div>

                        <div class="answer-section">
                            <% if (question.type === 'multiple-choice') { %>
                                <label>Answers (Select the correct bubble)</label>
                                <% question.options.forEach(function(option, i) { %>
                                    <div class="mc-option">
                                        <input type="radio" name="q_<%= index %>_correct" <%= option === question.correct_answer ? 'checked' : '' %> required>
                                        <input type="text" name="questions[][options][]" value="<%= option %>" required>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <label>Correct Answer</label>
                                <input type="text" name="questions[][correct_answer]" value="<%= question.correct_answer %>" required>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="btn-container">
                <button type="button" class="btn btn-add" onclick="addQuestion()">+ Add Question</button>
                <button type="submit" class="btn btn-save">Update Quiz</button>
            </div>
        </form>
    </div>

    <template id="question-template">
        <div class="question-card">
            <button type="button" class="remove-btn" onclick="removeQuestion(this)">Remove</button>
            
            <div class="form-group">
                <label>Question Text</label>
                <input type="text" name="questions[][text]" placeholder="Enter your question here" required>
            </div>

            <div class="form-group">
                <label>Question Type</label>
                <select name="questions[][type]" onchange="changeType(this)">
                    <option value="multiple-choice">Multiple Choice</option>
                    <option value="fill-blank">Fill in the Blank</option>
                </select>
            </div>

            <div class="answer-section">
                <label>Answers (Select the correct bubble)</label>
                <div class="mc-option">
                    <input type="radio" name="correct_answer_temp" required>
                    <input type="text" name="questions[][options][]" placeholder="Option A" required>
                </div>
                <div class="mc-option">
                    <input type="radio" name="correct_answer_temp">
                    <input type="text" name="questions[][options][]" placeholder="Option B" required>
                </div>
                <div class="mc-option">
                    <input type="radio" name="correct_answer_temp">
                    <input type="text" name="questions[][options][]" placeholder="Option C">
                </div>
                <div class="mc-option">
                    <input type="radio" name="correct_answer_temp">
                    <input type="text" name="questions[][options][]" placeholder="Option D">
                </div>
            </div>
        </div>
    </template>

    <script>
        function addQuestion() {
            const container = document.getElementById('questions-container');
            const template = document.getElementById('question-template');
            const clone = template.content.cloneNode(true);
            
            const uniqueGroup = `q_${Date.now()}_${Math.random().toString(36).substr(2, 5)}`;
            const radios = clone.querySelectorAll('input[type="radio"]');
            radios.forEach(radio => {
                radio.name = uniqueGroup; 
            });

            container.appendChild(clone);
        }

        function removeQuestion(button) {
            button.closest('.question-card').remove();
        }

        function changeType(select) {
            const card = select.closest('.question-card');
            const answerSection = card.querySelector('.answer-section');
            const uniqueName = 'q_' + Math.random().toString(36).substr(2, 9);
            
            if (select.value === 'fill-blank') {
                answerSection.innerHTML = `
                    <label>Correct Answer</label>
                    <input type="text" name="questions[][correct_answer]" placeholder="Type the correct word/phrase" required>
                `;
            } else {
                answerSection.innerHTML = `
                    <label>Answers (Select the correct bubble)</label>
                    <div class="mc-option">
                        <input type="radio" name="${uniqueName}" required>
                        <input type="text" name="questions[][options][]" placeholder="Option A" required>
                    </div>
                    <div class="mc-option">
                        <input type="radio" name="${uniqueName}">
                        <input type="text" name="questions[][options][]" placeholder="Option B" required>
                    </div>
                    <div class="mc-option">
                        <input type="radio" name="${uniqueName}">
                        <input type="text" name="questions[][options][]" placeholder="Option C">
                    </div>
                    <div class="mc-option">
                        <input type="radio" name="${uniqueName}">
                        <input type="text" name="questions[][options][]" placeholder="Option D">
                    </div>
                `;
            }
        }

        async function submitQuiz(e) {
            e.preventDefault();

            const title = document.querySelector('input[name="title"]').value;
            const questionCards = document.querySelectorAll('.question-card');
            const questionsData = [];

            questionCards.forEach(card => {
                const text = card.querySelector('input[name="questions[][text]"]').value;
                const type = card.querySelector('select').value;
                let correctAnswer = '';
                let options = [];

                if (type === 'multiple-choice') {
                    const optionDivs = card.querySelectorAll('.mc-option');
                    optionDivs.forEach(div => {
                        const radio = div.querySelector('input[type="radio"]');
                        const inputVal = div.querySelector('input[type="text"]').value;
                        
                        if (inputVal) options.push(inputVal);
                        if (radio && radio.checked) correctAnswer = inputVal;
                    });
                } else {
                    const correctInput = card.querySelector('input[name="questions[][correct_answer]"]');
                    if (correctInput) correctAnswer = correctInput.value;
                }

                questionsData.push({
                    text,
                    type,
                    options,
                    correct_answer: correctAnswer
                });
            });

            try {
                const response = await fetch('/users/quiz/<%= quiz.id %>/edit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ title, questions: questionsData })
                });

                const result = await response.json();
                
                if (result.success) {
                    alert("Quiz updated successfully!");
                    window.location.href = "/users/dashboard";
                } else {
                    alert("Error: " + (result.error || "Something went wrong"));
                }
            } catch (err) {
                console.error(err);
                alert("A connection error occurred.");
            }
        }
    </script>
</body>
</html>